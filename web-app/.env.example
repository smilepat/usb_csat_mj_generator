# 서버 설정
PORT=3001
NODE_ENV=development

# API 키 설정
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI 설정
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# LLM 설정 (gemini / openai / azure 중 선택)
PROVIDER=gemini
GEMINI_MODEL=gemini-2.5-pro
OPENAI_MODEL=gpt-4.1-mini
TEMP_BASE=0.4
MAX_RETRY=3

# 로그 레벨 (INFO, WARN, ERROR)
LOG_LEVEL=INFO

# 세션 시크릿 (Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
SESSION_SECRET=your_session_secret_here

# 인증 설정 (선택사항)
# API_ACCESS_KEY=your_api_access_key_here  # API 키 인증 활성화
# ADMIN_PASSWORD=your_admin_password_here  # 관리자 로그인 비밀번호
# SKIP_AUTH=false                          # 개발 환경에서 인증 비활성화

# 로깅 설정
LOG_REQUESTS=false  # HTTP 요청 로깅

# 클라이언트 URL (프로덕션용)
# CLIENT_URL=https://your-domain.com
